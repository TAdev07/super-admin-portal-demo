# Super Admin API (.env.example)
# Copy to .env and adjust for your environment

# Server
PORT=3001
DATABASE_PATH=./database.sqlite

# Refresh cookie configuration
# For local HTTP dev, keep COOKIE_SECURE=false and COOKIE_SAMESITE=lax.
# For cross-site silent flows in iframe under HTTPS, use COOKIE_SAMESITE=none and COOKIE_SECURE=true.
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=
COOKIE_PATH=/api/auth
COOKIE_MAX_AGE_MS=2592000000  # 30 days
